<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.shajjad.minicalculator.MainActivity">

    <include layout="@layout/calculator_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="c"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSmallBracket"
                android:text="( )"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonPercentage"
                android:text="%"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonBack"
                android:text="X"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textStyle="bold"
                android:minHeight="80dp"
                android:background="@color/colorFuncBtnBackground"
                android:textColor="@color/colorFuncBtnText"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSeven"
                android:text="7"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEight"
                android:text="8"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonNine"
                android:text="9"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMultiplication"
                android:text="*"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonFour"
                android:text="4"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonFive"
                android:text="5"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSix"
                android:text="6"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonSubtract"
                android:text="-"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonOne"
                android:text="1"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTwo"
                android:text="2"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonThree"
                android:text="3"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonAddition"
                android:text="+"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorFuncBtnText"
                android:background="@color/colorFuncBtnBackground"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="3dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDot"
                android:text="."
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonZero"
                android:text="0"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDivide"
                android:text="/"
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="@color/colorNumBtnText"
                android:background="@color/colorNumBtnBackground"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/buttonEqual"
                android:text="="
                android:layout_marginLeft="2dp"
                android:textSize="25sp"
                android:minHeight="80dp"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="#666"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
